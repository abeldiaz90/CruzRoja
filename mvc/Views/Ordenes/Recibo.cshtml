@model IEnumerable<mvc.Models.OrdenesRecibos>
@using mvc.Models
<head>
	<link rel="stylesheet" type="text/css" href="~/estilos.css" />
</head>
<body>
	<div class="ticket">
		<div style="align-content:center;text-align:center;">
			<img src="~/images/logo.png" alt="logo" /><br />
			<label id="lbldelegacion">DELEGACIÓN @Html.DisplayFor(x => x.FirstOrDefault().Delegacion) @Html.DisplayFor(x => x.FirstOrDefault().Delegacion)</label><br />
			<label id="lbldomicilio">@Html.DisplayFor(x => x.FirstOrDefault().delegacionesVista.delegaciones.Calle) @Html.DisplayFor(x => x.FirstOrDefault().delegacionesVista.delegaciones.NumeroExterior) @Html.DisplayFor(x => x.FirstOrDefault().delegacionesVista.delegaciones.Colonia)</label><br />
			<label id="lbltelefono">@Html.DisplayFor(x => x.FirstOrDefault().delegacionesVista.delegaciones.Telefono)</label><br />
			<b><label> Paciente: </label></b>
			<span>
				@Html.DisplayFor(x => x.FirstOrDefault().pacientes.Nombre) @Html.DisplayFor(x => x.FirstOrDefault().pacientes.SegundoNombre) @Html.DisplayFor(x => x.FirstOrDefault().pacientes.ApellidoPaterno)  @Html.DisplayFor(x => x.FirstOrDefault().pacientes.ApellidoMaterno)
			</span>
			<br />
			<b><label> CONCEPTOS </label></b>
			<hr />
			<table align="center">
				<thead>
				<td>
					Cantidad
				</td>
				<td>
					Descripción
				</td>
				<td>
					Subtotal
				</td>
				<td>
					IVA
				</td>
				<td>
					Total
				</td>
				</thead>
				@foreach (var i in Model)
				{
					<tr>
						<td>
							<label>@i.ordenesDetalles.cantidad</label>
						</td>
						<td>
							<label>@i.serviciosDelegacion.NombreServicio</label>
						</td>
						<td>
							<label>@String.Format("{0:C}", @i.ordenesDetalles.subtotal)</label>
						</td>
						<td>
							<label>@String.Format("{0:C}", @i.ordenesDetalles.IVA)</label>
						</td>
						<td>
							<label>@String.Format("{0:C}", @i.ordenesDetalles.Total)</label>
						</td>
					</tr>

				}
				<tr>
					<td>
						Total Pagado: $@Html.DisplayFor(x => x.FirstOrDefault().totalpagado)
					</td>
				</tr>
			</table>
		</div>
	</div>
</body>





