<h3>Ordenes de Servicio</h3>


@Html.Partial("Pacientes")

@using (Html.BeginForm("Agregar", "Ordenes", FormMethod.Post, new { @class = "form", id = "Formulario" }))
{
	@Html.AntiForgeryToken();
	@Html.ValidationSummary(true);
	<fieldset>
		<div class="container">
			<div clss="row align-items-start">
				<div class="col-sm-6">
					@Html.HiddenFor(m => m.Id)
				</div>
				<div class="col-sm-6">
					@Html.LabelFor(m => m.ordentemporal.IdServicio)
					@Html.DropDownListFor(m => m.ordentemporal.IdServicio, new SelectList(Model.serviciosDelegacions, "Id", "NombreServicio"), "---Seleccione un Servicio---")
				</div>
				<div class="col-sm-6">
					@Html.LabelFor(m => m.ordentemporal.IdPrecio)
					@Html.DropDownListFor(m => m.ordentemporal.IdPrecio, new SelectList(Model.serviciosDelegacionPrecios, "Id", "PrecioSinIva"))
				</div>
				<div class="col-sm-6">
					@Html.LabelFor(m => m.ordentemporal.cantidad)
