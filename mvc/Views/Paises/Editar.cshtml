@model mvc.Models.Paises
@{
	ViewBag.Title = "Paises";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edición de Paises</h2>
@Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-outline-info" })
@using (Html.BeginForm("Guardar", "Paises", FormMethod.Post))
{
	@Html.AntiForgeryToken();
	@Html.ValidationSummary(true);
	<fieldset>
		@Html.HiddenFor(model => model.Id)
		<div class="row">
			<div class="col-sm-4 col-lg-4">
				@Html.LabelFor(model => model.Pais)
				@Html.EditorFor(model => model.Pais, string.Empty, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pais, string.Empty, new { @class = "text-danger" })
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-lg-4">
				<input type="submit" value="Guardar" class="btn btn-outline-success" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-dark" })
			</div>
		</div>
	</fieldset>
}
